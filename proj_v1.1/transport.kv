#:kivy 1.9.0

<Widgets>:
	canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'Images/background.png'
	
	Label:
		font_size: 40
		center_x: root.width / 2
		top: root.top
		text:'Heure Actuelle :'
		color: 1,0,0,1

	Label:
		text:'Vous êtes :'
		font_size: 25
		center_x: root.width / 5
		top: root.top * 3 / 4
		color: 1,0,0,1

	Label:
		text:'Ligne n° :'
		font_size: 25
		center_x: root.width * 2.75 / 5
		top: root.top * 3 / 4
		color: 1,0,0,1

	Label:
		text:'Sens :'
		font_size: 25
		center_x: root.width * 4 / 5
		top: root.top * 3 / 4
		color: 1,0,0,1

	Label:
		text:'Horaires Départs :'
		font_size: 25
		center_x: root.width * 1.5 / 5
		top: root.top * 2.75 / 5
		color: 1,0,0,1

	Label:
		text:'Horaires Arrivées :'
		font_size: 25
		center_x: root.width * 3.5 / 5
		top: root.top * 2.75 / 5
		color: 1,0,0,1

	Button:
		text:'Nouvelle\nRecherche'
		font_size: 30
		width: root.width / 6
		height: root.height / 6
		center_x: root.width / 2
		top: root.height / 5
		color: 1,1,1,1
		size_hint_x: None